{
  "manifest_version": 2,
  "name": "LiveBarn Enhanced Player",
  "version": "1.0",
  "description": "Adds playback speed control and forward 10s button to LiveBarn video player",
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.livebarn.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}